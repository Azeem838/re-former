<% if @user.errors.any? %>
  <h4 class = "errors">The following errors prevented the User from being saved</h4>
  <ul class = "errors">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username, 'Username' %>
  <%= f.text_field :username, placeholder: "xyz123" %> <br><br>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email, placeholder: "example@domain" %> <br><br>
  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password, placeholder: "enter your password" %><br><br>
  <%= f.submit "Create" %>
<% end %>
